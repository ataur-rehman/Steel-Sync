{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ittehad Iron Store",
  "version": "1.0.0",
  "identifier": "com.itehadironstore.management",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173/",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": []
    }
  },
  "app": {
    "security": {
      "capabilities": [
        "main-capability"
      ],
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Ittehad Iron Store",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}